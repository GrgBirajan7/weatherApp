<html lang="en">
	<head>
		{{>headerlinks}}
	</head>
	<body>
		<!-- Navbar code -->
		{{>navbar}}
		<!-- Main body code -->
		<section class="container-fluid main-container">
			<div class="row">
				<div class="col-md-10 mx-auto">
					<div class="search-container">
						<form action="" class="search-form">
							<input
								type="text"
								name=""
								id="city-name"
								placeholder="Enter City Name"
								autocomplete="off"
							/>
							<input type="submit" value="Search" class="submit" />
						</form>
					</div>
					<div class="not-found d-flex justify-content-center">
						<div class="alert alert-warning" role="alert" style="display: none;">
							<span>Not found!</span><span class="x-icon"><i class="fa-solid fa-x"></i></span>
						</div>
					</div>
					<div class="card hide">
						<div class="upper-layer">
							<p class="location">Dharan, NP</p>
							<p class="time">00:00</p>
						</div>
						<div class="middle-layer">
							<i class="fa-solid fa-cloud"></i>
						</div>
						<div class="lower-layer">
							<div class="lower-layer__left">
								<div class="wind-speed">
									<i class="fa-solid fa-wind"></i>
									<p>0m/s</p>
								</div>
								<div class="humidity-pct">
									<i class="fa-solid fa-droplet"></i>
									<p>0%</p>
								</div>
								<div class="cloud-pct">
									<i class="fa-solid fa-cloud"></i>
									<p>0%</p>
								</div>
							</div>
							<div class="lower-layer__right">
								<p class="temperature">0Â°c</p>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>

		<!-- footer code -->
		{{>footer}}
	</body>
</html>